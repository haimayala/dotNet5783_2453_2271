<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
       
        <local:ConvertImagePathToBitmap x:Key="imageConverter"/>        <local:ConvertTextToBoolean x:Key="textToBoolian"/>        <local:ConvertBolianToContent x:Key="boolToContent"/>        <local:ConvertEnumToText x:Key="enumToTexeBefore"/>        <local:ConvertEnumToTextAfter x:Key="enumToTexeAfter"/>        <local:BooleanToColorConverter x:Key="boolToColor"/>        
        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="Background"
                    Value="#FFF00A76"/>
            <Setter Property="FontSize"
                    Value="20"/>
        </Style>

      
  
    </Application.Resources>

</Application>
