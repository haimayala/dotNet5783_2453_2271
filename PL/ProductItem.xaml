<Window x:Class="PL.ProductItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ProductItem" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="369*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="ProItemList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,582,0" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="cmbboxCategory" HorizontalAlignment="Left" Margin="161,0,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.932,1.301" Grid.Column="1" SelectionChanged="cmbboxCategory_SelectionChanged"/>
        <Button x:Name="btnshowCart" Grid.Column="1" Content="Show Cart" HorizontalAlignment="Left" Margin="511,354,0,0" VerticalAlignment="Top" Height="43" Width="153"/>
        <ComboBox HorizontalAlignment="Left" Margin="-141,105,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
